<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ichi.inspection.app.activities.StartActivity">
    <ScrollView
        android:id="@+id/svParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/llParent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Order No-->
            <android.support.v7.widget.CardView
                android:id="@+id/cvOrderNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.ichi.inspection.app.utils.CustomTextView
                    android:id="@+id/tvOrderNo"
                    style="@style/txt_reg_12_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/values_12"
                    android:text="@string/orderno"
                    android:textAllCaps="true" />
            </android.support.v7.widget.CardView>

            <!--Client Information-->
            <android.support.v7.widget.CardView
                android:id="@+id/cvClientInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.ichi.inspection.app.utils.CustomTextView
                    android:id="@+id/tcClientInfo"
                    style="@style/txt_reg_16_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="@dimen/values_16"
                    android:layout_marginTop="@dimen/values_10"
                    android:layout_marginBottom="@dimen/values_10"
                    android:text="@string/clientinfo"
                    android:textAllCaps="true"  />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/values_16"
                    android:background="@drawable/ic_chevron_right_black_24dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/values_16"
                    android:layout_gravity="bottom"
                    android:background="@color/gray"/>
            </android.support.v7.widget.CardView>

            <!--Buyer Agent-->
            <android.support.v7.widget.CardView
                android:id="@+id/cvBuyerAgent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.ichi.inspection.app.utils.CustomTextView
                    android:id="@+id/tcBuyerAgent"
                    style="@style/txt_reg_16_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="@dimen/values_16"
                    android:layout_marginTop="@dimen/values_10"
                    android:layout_marginBottom="@dimen/values_10"
                    android:text="@string/buyer_agent"
                    android:textAllCaps="true"  />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/values_16"
                    android:background="@drawable/ic_chevron_right_black_24dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/values_16"
                    android:layout_gravity="bottom"
                    android:background="@color/gray"/>
            </android.support.v7.widget.CardView>

            <!--Listing Agent-->
            <android.support.v7.widget.CardView
                android:id="@+id/cvListingAgent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.ichi.inspection.app.utils.CustomTextView
                    android:id="@+id/tcListingAgent"
                    style="@style/txt_reg_16_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="@dimen/values_16"
                    android:layout_marginTop="@dimen/values_10"
                    android:layout_marginBottom="@dimen/values_10"
                    android:text="@string/listing_agent"
                    android:textAllCaps="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/values_16"
                    android:background="@drawable/ic_chevron_right_black_24dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/values_16"
                    android:layout_gravity="bottom"
                    android:background="@color/gray"/>
            </android.support.v7.widget.CardView>

            <!--Property Info-->
            <android.support.v7.widget.CardView
                android:id="@+id/cvPropertyInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.ichi.inspection.app.utils.CustomTextView
                    android:id="@+id/tcPropertyInfo"
                    style="@style/txt_reg_16_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="@dimen/values_16"
                    android:layout_marginTop="@dimen/values_10"
                    android:layout_marginBottom="@dimen/values_10"
                    android:text="@string/property_info"
                    android:textAllCaps="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/values_16"
                    android:background="@drawable/ic_chevron_right_black_24dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/values_16"
                    android:layout_gravity="bottom"
                    android:background="@color/gray"/>
            </android.support.v7.widget.CardView>

            <!--Scheduler-->
            <android.support.v7.widget.CardView
                android:id="@+id/cvScheduler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.ichi.inspection.app.utils.CustomTextView
                    android:id="@+id/tcScheduler"
                    style="@style/txt_reg_16_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="@dimen/values_16"
                    android:layout_marginTop="@dimen/values_10"
                    android:layout_marginBottom="@dimen/values_10"
                    android:text="@string/scheduler"
                    android:textAllCaps="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/values_16"
                    android:background="@drawable/ic_chevron_right_black_24dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/values_16"
                    android:layout_gravity="bottom"
                    android:background="@color/gray"/>
            </android.support.v7.widget.CardView>

            <!--Fees-->
            <android.support.v7.widget.CardView
                android:id="@+id/cvFees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.ichi.inspection.app.utils.CustomTextView
                    android:id="@+id/tcFees"
                    style="@style/txt_reg_16_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="@dimen/values_16"
                    android:layout_marginTop="@dimen/values_10"
                    android:layout_marginBottom="@dimen/values_10"
                    android:text="@string/fees"
                    android:textAllCaps="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/values_16"
                    android:background="@drawable/ic_chevron_right_black_24dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/values_16"
                    android:layout_gravity="bottom"
                    android:background="@color/gray"/>
            </android.support.v7.widget.CardView>

            <!--Special Instruction-->
            <android.support.v7.widget.CardView
                android:id="@+id/cvSpecialInstruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.ichi.inspection.app.utils.CustomTextView
                    android:id="@+id/tcSpecialInstruction"
                    style="@style/txt_reg_16_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="@dimen/values_16"
                    android:layout_marginTop="@dimen/values_10"
                    android:layout_marginBottom="@dimen/values_10"
                    android:text="@string/special_instruction"
                    android:textAllCaps="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/values_16"
                    android:background="@drawable/ic_chevron_right_black_24dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/values_16"
                    android:layout_gravity="bottom"
                    android:background="@color/gray"/>
            </android.support.v7.widget.CardView>

            <!--Payment-->
            <android.support.v7.widget.CardView
                android:id="@+id/cvPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.ichi.inspection.app.utils.CustomTextView
                    android:id="@+id/tcPayment"
                    style="@style/txt_reg_16_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="@dimen/values_16"
                    android:layout_marginTop="@dimen/values_10"
                    android:layout_marginBottom="@dimen/values_10"
                    android:text="@string/payment"
                    android:textAllCaps="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/values_16"
                    android:background="@drawable/ic_chevron_right_black_24dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/values_16"
                    android:layout_gravity="bottom"
                    android:background="@color/gray"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>


</android.support.design.widget.CoordinatorLayout>