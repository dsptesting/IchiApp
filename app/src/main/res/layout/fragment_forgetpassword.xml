<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/logobg"
    tools:context="com.ichi.inspection.app.activities.StartActivity">

    <LinearLayout
        android:id="@+id/rlLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/values_50"
            android:layout_marginRight="@dimen/values_50"
            android:layout_marginTop="@dimen/values_115"
            android:layout_weight="4"
            android:src="@mipmap/ichilogo"/>

        <LinearLayout
            android:id="@+id/llLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical">
            <!-- Email Labl-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/values_h15"
                android:layout_marginLeft="@dimen/values_w75"
                android:layout_marginRight="@dimen/values_w75"
                android:layout_marginTop="@dimen/values_h15">

                <com.ichi.inspection.app.utils.CustomEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/values_10"/>
            </android.support.design.widget.TextInputLayout>
            <!-- Submit Button -->
            <com.ichi.inspection.app.utils.CustomButton
                android:id="@+id/btnSubmit"
                style="@style/txt_reg_16_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/values_h15"
                android:layout_marginLeft="@dimen/values_w75"
                android:layout_marginRight="@dimen/values_w75"
                android:layout_marginTop="@dimen/values_h15"
                android:background="@drawable/shape_trans_blue"
                android:text="@string/submit"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="@dimen/values_w75"
                android:layout_marginRight="@dimen/values_w75"
                android:layout_height="wrap_content">

                <com.ichi.inspection.app.utils.CustomEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Label"
                    android:enabled="false"
                    android:paddingTop="5dp"
                    android:text="Value "
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/values_txt_14"/>

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>