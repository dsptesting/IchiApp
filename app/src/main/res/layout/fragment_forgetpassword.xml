<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ichi.inspection.app.activities.StartActivity">
    <LinearLayout
        android:id="@+id/rlLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:src="@mipmap/ichilogo"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/values_50"
            android:layout_marginRight="@dimen/values_50"
            android:layout_marginTop="@dimen/values_115"/>
        <LinearLayout
            android:id="@+id/llLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical">
            <!-- Email Labl-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/values_h15"
                android:layout_marginLeft="@dimen/values_w75"
                android:layout_marginRight="@dimen/values_w75"
                android:layout_marginTop="@dimen/values_h15">
                <com.ichi.inspection.app.utils.CustomEditText
                    android:padding="@dimen/values_10"
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>
            <!-- Submit Button -->
            <com.ichi.inspection.app.utils.CustomButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/txt_reg_16_white"
                android:background="@drawable/shape_trans_blue"
                android:layout_marginLeft="@dimen/values_w75"
                android:layout_marginRight="@dimen/values_w75"
                android:layout_marginTop="@dimen/values_h15"
                android:layout_marginBottom="@dimen/values_h15"
                android:text="@string/submit" />
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>